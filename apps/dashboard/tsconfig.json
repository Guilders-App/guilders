{
  "extends": "@guilders/tsconfig/nextjs.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "../../packages/ui/src/submit-button.tsx"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  // Required for Hono RPC to work
  "references": [
    {
      "path": "../api/tsconfig.json"
    }
  ],
  "files": []
}
